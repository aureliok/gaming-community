@model List<GamingCommunity.Models.GamingThreadViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Gaming";
}


<div class="containerTable">
    <h2 class="mb-3">Gaming Threads</h2>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th class="truncate-text">Title</th>
                    <th class="truncate-text">Content</th>
                    <th class="truncate-text">Original Poster </th>
                    <th class="truncate-text">Comments </th>
                    <th class="truncate-text">Created At</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var thread in Model)
                {
                    <tr data-toggle="modal" data-target="#modal-@thread.ThreadId">
                        <td class="truncate-text custom-th">@Html.DisplayFor(modelItem => thread.Title)</td>
                        <td class="truncate-text custom-th">@Html.DisplayFor(modelItem => thread.Content)</td>
                        <td class="truncate-text custom-th">@Html.DisplayFor(modelItem => thread.Username)</td>
                        <td class="truncate-text custom-th">@Html.DisplayFor(modelItem => thread.CommentsCount)</td>
                        <td class="truncate-text custom-th">@thread.CreatedAt.ToString("g")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@foreach (var thread in Model)
{
    <div class="modal fade" id="modal-@thread.ThreadId" tabindex="-1" role="dialog" aria-labelledby="modalLabel-@thread.ThreadId" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@thread.ThreadId @thread.Title</h5>
                    <button type="button" id="@thread.ThreadId" class="modalClose" data-dismiss="modal" aria-label="Close">
                        <span class="modalClose" id="@thread.ThreadId">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>@thread.Content</p>
                </div>
                <div class="modal-footer">
                    <button type="button" id="@thread.ThreadId" class="btn btn-secondary modalClose" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}


@section Scripts {
    <script type="module" src="~/js/Community/reviews.js"></script>
}